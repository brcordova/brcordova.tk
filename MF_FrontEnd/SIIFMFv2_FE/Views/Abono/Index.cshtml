@model IEnumerable<MF_Modelo.Cuenta_Abono>

@{
    ViewBag.Title = "Abonos";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<h2>Abonos registrados</h2>

<div class="text-center">
    <h1 class="page-header">Estadisticas</h1>
    <div class="row placeholder">
        <div class="progress">
            <div class="progress-bar progress-bar-info" style="width: 25%" id="divRegistrado">
                <span class="sr-only"></span>
            </div>
            <div class="progress-bar progress-bar-success" style="width: 25%" id="divActivo">
                <span class="sr-only"></span>
            </div>
            <div class="progress-bar progress-bar-info progress-bar-striped" style="width: 25%" id="divInactivo">
                <span class="sr-only"> </span>
            </div>
            <div class="progress-bar progress-bar-warning" style="width: 25%" id="divRechazado">
                <span class="sr-only"></span>
            </div>
            <div class="progress-bar progress-bar-danger progress-bar-striped" style="width: 25%" id="divCancelado">
                <span class="sr-only"></span>
            </div>
            <div class="progress-bar progress-bar-info progress-bar-striped" style="width: 25%" id="divNoDefinido">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>
    <h3 id="h3Filtro">@ViewBag.Filtro</h3>

    <form class="form-inline">
        <div class="form-group">
            <label for="dtpFecInicio"> De </label>
            <input type="text" class="form-control" id="dtpFecInicio" title="Se requiere de una fecha inicial" required placeholder="Fecha inicio" >
        </div>
        <div class="form-group">
            <label for="dtpFecFinal"> a </label>
            <input type="text" class="form-control" id="dtpFecFinal" title="Se requiere de una fecha inicial" required placeholder="Fecha final">
        </div>
        <button type="submit" class="btn btn-primary" data-loading-text="Procesando..." id="btnFiltrar">Filtrar</button>


        <div class="alert alert-danger alert-dismissable fade in" id="divErrorFecha">
            <button type="button" class="close" data-dismiss="alert" >&times;</button>
            <strong>¡Cuidado!</strong> Debes de seleccionar la fecha de inicio..
        </div>


    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                Acción
            </th>
            <th>
                Cliente
            </th>
            <th>
                Cuenta
            </th>
            <th>
                Fecha operación
            </th>
            <th>
                Monto
            </th>
            <th>
                Fecha movimiento
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuenta_Abono_nombreOrdenante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuenta_Abono_cuentaOrdenante)
                </td>
                <td>
                    @item.Cuenta_Abono_fechaOperacion.ToString("dd/MMM/yyyy")
                </td>
                <td>
                    @String.Format("{0:c}", item.Cuenta_Abono_monto)
                </td>
                <td>
                    @item.Cuenta_Abono_fechaRegistro.ToString("dd/MMM/yyyy HH:mm")
                </td>
            </tr>
        }
    </table>
</div>


@section scripts {
    <script src="@Url.Content("~/Scripts/appJS/abonos.js")" type="text/javascript"></script>
}
